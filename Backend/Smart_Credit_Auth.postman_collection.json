          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_TOKEN_HERE",
                "description": "Replace YOUR_TOKEN_HERE with actual token from login/register"
              }
            ],
            "url": {
