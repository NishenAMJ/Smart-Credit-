              "raw": "{\n  \"phone\": \"+1-555-8888\",\n  \"investmentCapacity\": 750000,\n  \"riskPreference\": \"high\",\n  \"address\": \"456 Updated Avenue, New City\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lender/{{lenderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["lender", "{{lenderId}}"]
