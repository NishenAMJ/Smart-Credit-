                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lender",
              "host": ["{{baseUrl}}"],
              "path": ["lender"]
            },
            "description": "Get list of all lenders (admin/public view)"
          },
          "response": []
        }
      ],
      "description": "Lender profile management endpoints"
    },
    {
      "name": "Loan Offers",
      "item": [
        {
          "name": "1. Create Loan Offer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('offerId', jsonData.id);",
                  "    console.log('Offer ID saved: ' + jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
